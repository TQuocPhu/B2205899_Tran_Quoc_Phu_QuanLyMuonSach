{
  "compilerOptions": {
    "baseUrl": ".",
    "ignoreDeprecations": "6.0",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@views/*": ["src/views/*"],
      "@store/*": ["src/store/*"],
      "@router/*": ["src/router/*"]
    },
    "checkJs": true,      // bật kiểm tra JS cơ bản
    "allowJs": true        // cho phép JS trong project
  },
  "exclude": ["node_modules", "dist"]
}
